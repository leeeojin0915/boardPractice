    <sql id="sql_selectBoard_where">
        <where>
            AND BOARD_ID = #{board_id}
        </where>
    </sql>
    <select id="selectBoardList" resultType="List" parameterType="Map">
        SELECT BOARD_ID,
               BOARD_TYPE,
               TITLE,
               CONTENT,
               USER_ID,
               DELETE_YN,
               DATE_FORMAT(CREATE_DATE, '%Y%m%d') AS CREATE_DATE,
               UPDATE_DATE
        FROM BOARD
        WHERE DATE_FORMAT(CREATE_DATE, '%Y%m%d') = #{create_date}
    </select>
